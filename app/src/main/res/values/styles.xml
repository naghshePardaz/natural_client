<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginPage" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
    </style>
    <style name="loginElement">
        <item name="android:fontFamily">@font/vazir_fd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="toolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:elevation">3dp</item>
        <item name="android:layoutDirection">rtl</item>
    </style>
    <style name="toolBarText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/vazir_fd</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="recycler">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layout_marginTop">?attr/actionBarSize</item>
    </style>
    <style name="recyclerText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/vazir_fd</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="greenButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:fontFamily">@font/vazir_fd</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

</resources>
